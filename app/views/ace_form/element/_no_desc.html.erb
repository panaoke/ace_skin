<div class="form-group col-sm-12">
  <div class="col-sm-2 form-name">
    <span class="name-label"><%= input.label.try(:html_safe) %></span>
  </div>
  <div class="col-sm-10 form-input">
    <%= input.output %>
    <%= block.try(:call) %>
    <% if input.required %>
        <span class="text-danger">*</span>
    <% end %>
  </div>
</div>